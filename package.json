{
  "name": "vilicando",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:core && lerna run build --stream --parallel",
    "build:core": "cd packages/core && yarn build",
    "dev": "yarn build:core && lerna run build:watch --stream --parallel",
    "example:antd": "cd examples/antd && yarn dev",
    "example:basic": "cd examples/basic && yarn dev",
    "example:env": "cd examples/env && yarn dev",
    "example:form": "cd examples/form && yarn dev",
    "example:hasura": "cd examples/hasura && yarn dev",
    "example:ssr": "cd examples/ssr && yarn dev",
    "example:theming": "cd examples/theming && yarn dev",
    "example:translation": "cd examples/translation && yarn dev",
    "feature": "echo \"Name: \" && read name && git checkout -b feature-$name master",
    "lint": "yarn prettier && eslint . --ext js,jsx,ts,tsx --fix --max-warnings=0",
    "merge": "name=\"$(git branch | grep \\* | cut -d ' ' -f2)\" && git checkout master && git merge $name --no-ff -m \"Merge $name\" && git branch -d $name && git push origin master",
    "prettier": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\"",
    "pub": "lerna version --force-publish",
    "theme": "cd packages/antd && yarn theme",
    "up": "yarn upgrade-interactive --latest && yarn check"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.7.2",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  }
}
