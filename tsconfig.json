{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib"]
}
